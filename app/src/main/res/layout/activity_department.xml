<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/common_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/mine_department"
            android:textColor="#fff"
            android:textSize="@dimen/title_size" />

        <include
            layout="@layout/back_img_white" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/mine_bg">
        <ImageView
            android:id="@+id/department_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/default_pic"/>
    </RelativeLayout>

    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/department_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/department_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.gs.buluo.common.widget.StatusLayout>
</LinearLayout>