<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/tint_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/reserve_record"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_img_black" />
    </RelativeLayout>
    <include layout="@layout/split_area_narrow"/>
    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/room_record_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:errorDrawable="@mipmap/net_error"
        app:emptyDrawable ="@mipmap/empty_boardroom"
        android:background="@color/white">

        <com.gs.buluo.app.view.widget.recyclerHelper.NewRefreshRecyclerView
            android:id="@+id/room_record_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.gs.buluo.common.widget.StatusLayout>

</LinearLayout>