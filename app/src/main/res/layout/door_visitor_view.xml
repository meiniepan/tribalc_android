<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_background_round">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="50dp"
            android:src="@mipmap/visitor_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon">
            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/icon"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/door_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:gravity="center_horizontal"
                    android:text="访客二维码" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="访客姓名 : " />

                <TextView
                    android:id="@+id/door_visitor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电        话 : " />

                <TextView
                    android:id="@+id/door_visitor_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_background_round"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/qr_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:background="@color/divide_gray"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"/>
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:background="@color/divide_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="@dimen/bottom_height"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/share_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_wechat_icon"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/share_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/msg_icon"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>