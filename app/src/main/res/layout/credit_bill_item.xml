<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bill_item_year"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="4dp"
        android:text="本月"
        android:textSize="@dimen/dimens_16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="@dimen/board_margin_horizontal"
        android:layout_marginStart="@dimen/board_margin_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/credit_bill_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-400"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/credit_bill_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="xxxxxx活动"
            android:layout_below="@id/credit_bill_title"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_12sp" />

        <TextView
            android:id="@+id/credit_bill_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:layout_alignTop="@+id/credit_bill_title"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/credit_bill_overdue_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已逾期"
            android:visibility="gone"
            android:layout_alignTop="@+id/credit_bill_detail"
            android:textColor="@color/custom_red2"
            android:textSize="@dimen/dimens_12sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/credit_bill_money"/>
    </RelativeLayout>
</LinearLayout>