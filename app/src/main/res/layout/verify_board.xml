<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/pwd_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back_off"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/input_verify_title"
            android:textStyle="bold"
            android:textSize="@dimen/dimens_18sp"/>
    </LinearLayout>
    <include layout="@layout/split_line_no_margin_common"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入手机号"/>
<TextView
    android:id="@+id/tv_phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="18888888888"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收到的验证码"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/verify"
                android:textSize="@dimen/dimens_18sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/dimens_14sp"
                android:background="@drawable/text_background_round"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:hint="@string/input_verify"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reGet_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/get_verify_code"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="315dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="@string/yes"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16sp" />

</LinearLayout>