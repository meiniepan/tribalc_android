<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="预定详情"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_img_black" />
    </RelativeLayout>
    <include layout="@layout/split_line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/guide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="@+id/guide"
                android:textColor="@color/common_gray"
                android:text="订单号："/>
            <TextView
                android:id="@+id/room_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/text1"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="123456789"/>
            <TextView
                android:id="@+id/order_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:text="已预订"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/tint_bg"
                app:layout_constraintTop_toBottomOf="@+id/order_detail_status"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议室预定:"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/room_detail_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="星光会议似乎"
                app:layout_constraintTop_toTopOf="@+id/text2"
                app:layout_constraintStart_toEndOf="@id/text2"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预 定 时 间:"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/text2"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                android:text="2017-09-29"
                app:layout_constraintTop_toTopOf="@+id/text3"/>
            <TextView
                android:id="@+id/room_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/room_detail_date"
                app:layout_constraintTop_toBottomOf="@id/room_detail_date"
                android:layout_marginTop="6dp"
                android:text="12:30 - 13:30" />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_time"
                android:background="@color/tint_bg"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintStart_toStartOf="@id/guide"
                android:layout_marginTop="10dp"
                android:textColor="@color/common_gray"
                android:text="预  订  人:"/>
            <TextView
                android:id="@+id/room_detail_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toTopOf="@id/text4"
                android:text="小花" />
            <TextView
                android:id="@+id/room_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135465484652"
                app:layout_constraintStart_toEndOf="@id/room_detail_owner"
                app:layout_constraintTop_toTopOf="@+id/room_detail_owner"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_owner"
                android:background="@color/tint_bg"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参  会  人:"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/view3"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_member1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘备"
                android:drawableLeft="@mipmap/room_item_people"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toTopOf="@+id/text5"/>
            <TextView
                android:id="@+id/room_detail_phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231232131"
                android:drawableLeft="@mipmap/room_item_phone"
                android:drawablePadding="4dp"
                app:layout_constraintTop_toTopOf="@+id/room_detail_member1"
                app:layout_constraintStart_toEndOf="@id/room_detail_member1"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/room_detail_member2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关羽"
                android:drawableLeft="@mipmap/room_item_people"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_member1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231232131"
                android:drawableLeft="@mipmap/room_item_phone"
                android:drawablePadding="4dp"
                app:layout_constraintStart_toEndOf="@id/room_detail_member2"
                app:layout_constraintTop_toTopOf="@id/room_detail_member2"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/room_detail_member3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张飞"
                android:drawableLeft="@mipmap/room_item_people"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_member2"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_phone3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231232131"
                android:drawableLeft="@mipmap/room_item_phone"
                android:drawablePadding="4dp"
                app:layout_constraintStart_toEndOf="@id/room_detail_member3"
                app:layout_constraintTop_toTopOf="@id/room_detail_member3"
                android:layout_marginStart="24dp"/>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divide_gray"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_phone3"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开放时间:"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/line1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toTopOf="@id/text6"
                android:text="12:30-15:30"/>
            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配套设施:"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/text6"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/room_detail_equip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10dp"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toBottomOf="@id/room_detail_open_time"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="容纳人数"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/room_detail_equip"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可容纳6-8人"
                app:layout_constraintStart_toStartOf="@id/room_detail_spot"
                app:layout_constraintTop_toBottomOf="@id/room_detail_equip"
                android:layout_marginTop="10dp"/>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/tint_bg"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_capacity"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付类型"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/view4"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view4"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="企业支付" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/tint_bg"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_pay_way"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费用估计"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/view5"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_pay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view5"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="企业支付" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/tint_bg"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_pay_account"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/common_gray"
                app:layout_constraintStart_toStartOf="@id/guide"
                app:layout_constraintTop_toBottomOf="@id/view6"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/room_detail_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view6"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="2017-09-29" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="您可以在会议开始30分钟前取消订单"
                android:textSize="@dimen/dimens_12sp"
                android:textColor="@color/common_gray"
                android:background="@color/tint_bg"
                app:layout_constraintTop_toBottomOf="@+id/room_detail_create_time"
                android:layout_marginTop="10dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_square"
            android:text="@string/cancel_order"
            android:onClick="cancelOrder"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector_square_blue"
            android:textColor="@color/white"
            android:onClick="updateOrder"
            android:text="修改"/>
    </LinearLayout>
</LinearLayout>