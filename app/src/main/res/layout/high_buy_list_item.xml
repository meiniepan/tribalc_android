<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="252dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/high_buy_bac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/default_pic"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/black_mode"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/high_buy_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_ring"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/default_pic"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/tv_buy_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="131dp"
            android:text="京城名厨在三里屯"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tv_buy_list_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:drawableLeft="@mipmap/coordinate"
                    android:drawablePadding="5dp"
                    android:text="小猪餐厅"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_12sp"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_buy_list_mark_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="朝阳区"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_18sp"
                    />

                <TextView
                    android:id="@+id/tv_buy_list_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="55"
                    android:textColor="@color/white"
                    android:textSize="31sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>