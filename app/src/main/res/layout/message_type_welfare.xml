<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/split_area_narrow"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:orientation="vertical"
    android:background="@mipmap/back_welfare"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/icon_welfare"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福利红包"
                android:textColor="@color/common_dark"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:10"
                android:textColor="@color/gray_130"
                android:textSize="10sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="•••"
            />
    </LinearLayout>
    <include layout="@layout/split_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="38.5dp"
        android:paddingEnd="38.5dp"
        >


        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+500"
            android:textSize="32sp"
           android:textStyle="bold"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中秋节快乐"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
    <include layout="@layout/split_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="立即查看"
        android:textColor="@color/white"
        android:textSize="13sp"
        />
    <include layout="@layout/split_line"/>
</LinearLayout>
</LinearLayout>