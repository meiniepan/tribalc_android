<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/common_dark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/title_size"
            android:textColor="#fff"
            android:text="@string/add_visitor"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_dark"/>

        <include layout="@layout/back_img_white"
            android:id="@+id/back"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"/>
        <EditText
            android:id="@+id/add_visitor_name"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/dimens_14sp"



            android:hint="请输入姓名"/>
    </LinearLayout>
    <include layout="@layout/split_line_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"/>
        <EditText
            android:id="@+id/add_visitor_phone"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:hint="@string/input_phone"
            android:background="@null"
            android:textSize="@dimen/dimens_14sp"/>
    </LinearLayout>
    <include layout="@layout/split_line_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期"/>

        <TextView
            android:id="@+id/info_time_start"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="开始时间"
            android:gravity="center"
            android:textSize="@dimen/dimens_12sp"
            android:textColor="@color/common_gray"
            android:background="@drawable/text_background_round"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/common_gray"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/info_time_finish"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="@dimen/dimens_12sp"
            android:text="结束时间"
            android:textColor="@color/common_gray"
            android:background="@drawable/text_background_round"/>
    </LinearLayout>
    <include layout="@layout/split_line_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择门锁"/>
        <TextView
            android:id="@+id/add_visitor_choose_door"
            android:layout_marginStart="10dp"
            android:layout_width="225dp"
            android:layout_height="26dp"
            android:text="请选择"
            android:textColor="@color/common_gray"
            android:gravity="center"
            android:background="@drawable/text_background_round"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/add_visitor_finish"
        style="@style/button_style"
        android:text="生成二维码"/>
</LinearLayout>