<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_list_picture"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/default_pic" />

    <TextView
        android:id="@+id/goods_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goods_list_picture"
        android:layout_below="@+id/goods_list_picture"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称"
        android:textColor="@color/common_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goods_list_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goods_list_picture"
        android:layout_below="@+id/goods_list_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="商品品牌"
        android:textColor="@color/common_dark"
        android:textSize="@dimen/dimens_12sp" />

    <TextView
        android:id="@+id/goods_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goods_list_brand"
        android:layout_below="@+id/goods_list_brand"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:text="商品价格"
        android:textColor="@color/common_dark"
        android:textSize="@dimen/dimens_16sp"
        android:textStyle="bold" />

</RelativeLayout>