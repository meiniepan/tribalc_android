<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="生活服务"
        android:textColor="@color/common_dark"
        android:textSize="18sp"
        />

    <include layout="@layout/split_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向你推荐"
            android:textColor="@color/common_dark"
            android:textSize="@dimen/dimens_12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美味就是要分享"
            android:textColor="@color/shallow_gray"
            android:textSize="8.5sp"
            />
    </LinearLayout>
    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/high_buy_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:errorDrawable="@mipmap/net_error"
        app:emptyDrawable ="@mipmap/pay2m_error">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/list_high_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
/>
    </com.gs.buluo.common.widget.StatusLayout>
</LinearLayout>