<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/common_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/self_info"
            android:textColor="#fff"
            android:textSize="@dimen/dimens_18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#000" />

        <include
            android:id="@+id/self_back"
            layout="@layout/back_img_white" />
    </RelativeLayout>

    <include layout="@layout/split_area" />

    <RelativeLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/head"
            android:textSize="@dimen/dimens_16sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/self_iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@mipmap/head_icon"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="true" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/nickname"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:gravity="center_vertical"
            android:maxLength="18"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/sex"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_birthday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/birthday"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_motion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/motion"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_motion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/split_area" />

    <RelativeLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/number"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:id="@+id/ll_detail_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_item_height"
        android:orientation="horizontal"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/receive_address"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/self_margin_end"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/split_line" />
</LinearLayout>